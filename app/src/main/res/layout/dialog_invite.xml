<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <EditText
        android:id="@+id/searchInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:drawableRight="@drawable/ic_search"/>
    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <CheckBox
            android:id="@+id/cb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pp_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/cb_1"
            android:src="@drawable/ic_pp_wisatawan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/pp_1"
            android:text="Kholik Nur Hasan"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <CheckBox
            android:id="@+id/cb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pp_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/cb_2"
            android:src="@drawable/ic_pp_wisatawan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/pp_2"
            android:text="Syech"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <CheckBox
            android:id="@+id/cb_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pp_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/cb_3"
            android:src="@drawable/ic_pp_wisatawan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/pp_3"
            android:text="Tinesh Roy"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <CheckBox
            android:id="@+id/cb_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pp_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/cb_4"
            android:src="@drawable/ic_pp_wisatawan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/pp_4"
            android:text="Dimas Saputra"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:onClick="cancelTodo"
            android:text="Cancel"/>
        <Button
            android:id="@+id/btn_invite"
            android:layout_width="150dp"
            android:layout_toEndOf="@+id/btn_cancel"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_alignParentBottom="true"
            android:onClick="Invite"
            android:text="Undang"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/circle_list">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_group_photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        tools:src="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/text_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_group_photo"
        android:layout_toRightOf="@+id/img_group_photo"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Nama Group" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/text_name"
        android:layout_toRightOf="@+id/text_name"
        android:src="@drawable/ic_action_delete"
        android:layout_centerVertical="true"/>

</RelativeLayout>